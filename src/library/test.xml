<?xml version="1.0" encoding="UTF-8" ?>
<config>

	<!-- System version -->
	<attribute name='osversion' value='15.4' />

	<!-- HTTP is required for downloading files -->
	<module name='http' required='yes' />

	<!-- URL for the installation repositóry -->
	<attribute name='install' value='https://download.opensuse.net.br/distribution/leap/${osversion}/repo/oss' />

	<!-- Path for the installation kernel (Full URL or path from ${install} -->
	<kernel path='/boot/x86_64/loader/linux' />

	<!-- Path for the installation init (Full URL or path from ${install} -->
	<init path='/boot/x86_64/loader/initrd' />

	<!-- driver-installation-disk url='http://localhost/updates.dud' path='boot/updates.dud' / -->	

	<!-- source url='${install}/boot/x86_64/' path='boot/x86_64/' -->
	<source path='/boot/x86_64/' />
	<source path='/EFI/' />

	<kernel-parameters>
		<value name='splash' value='silent' /> 
		<value name='lang' value='pt_BR' />
		<value name='dhcptimeout' value='240' /> 
		<value name='noshell' value='1' /> 
		<value name='insecure' value='1' /> 
		<value name='self_update' value='0' />
	</kernel-parameters>

	<group name='OpenSUSE'>

		<!-- Nome que aparece na opção de menu -->
 		<attribute name='label' value='OpenSUSE ${suseversion}' />
 		
 		<option name='opt1' default='yes'>

	 		<attribute name='label' value='Option 1' />
 		
 		</option>


	</group>

</config>

