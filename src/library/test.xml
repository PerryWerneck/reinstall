<?xml version="1.0" encoding="UTF-8" ?>
<config>

	<!-- System version (if not defined will be read from /etc/os-release) -->
	<attribute name='osversion' value='15.4' />

	<!-- URL for the installation repositóry -->
	<attribute name='install' value='https://download.opensuse.net.br/distribution/leap/${osversion}/repo/oss' />

	<!-- URL for the installation kernel (Full URL or starting with '/' to be relative to install URL) -->
	<kernel url='/boot/x86_64/loader/linux' />

	<!-- URL for the installation init (Full URL or starting with '/' to be relative to install URL) -->
	<init url='/boot/x86_64/loader/initrd' />

	<!-- driver-installation-disk url='http://localhost/updates.dud' file-path='boot/updates.dud' / -->	

	<kernel-parameters>
		<value name='splash' value='silent' /> 
		<value name='lang' value='pt_BR' />
		<value name='dhcptimeout' value='240' /> 
		<value name='noshell' value='1' /> 
		<value name='insecure' value='1' /> 
		<value name='self_update' value='0' />
	</kernel-parameters>

	<group name='OpenSUSE'>

		<!-- Nome que aparece na opção de menu -->
 		<attribute name='label' value='OpenSUSE ${suseversion}' />
 		
 		<option name='opt1'>

	 		<attribute name='label' value='Option 1' />
 		
 		</option>


	</group>

</config>

